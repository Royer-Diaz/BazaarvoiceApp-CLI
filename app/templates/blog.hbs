<div class="container-fluid">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-9">

                <h1 class="page-header">
                    Bazaarvoice Learning Center
                    <small>Secondary Text</small>
                </h1>

                   {{#each post in model}}
                    <h2>
                        <a href="#">{{post.title}}</a>
                    </h2>
                    <p class="lead">
                        by <a href="javascript:;">{{author}}</a>
                    </p>
                    <p><span class="glyphicon glyphicon-time"></span> Posted on {{date}}</p>
                    <hr>
                    <img class="img-responsive" src={{img}} alt={{title}} title={{title}}>
                    <hr>
                    <p>{{description.intro}}</p>
                    <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

                    <hr>
                   {{/each}}
                    
            </div>
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-3">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
